<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference
			android:title="Update in Background"
			android:key="backgroundUpdating"
			android:defaultValue="true"
			/>
	<ListPreference
			android:key="languageSetting"
			android:title="Choose your Language"
			android:summary="Language Chooser"
			android:entries="@array/languageOptions"
			android:entryValues="@array/languageKeys"
			/>
	<ListPreference
			android:key="asylumStep"
			android:title="Choose your Asylum Step"
			android:summary="Step Chooser"
			android:entries="@array/asylumSteps"
			android:entryValues="@array/asylumKeys"
			/>
</PreferenceScreen>